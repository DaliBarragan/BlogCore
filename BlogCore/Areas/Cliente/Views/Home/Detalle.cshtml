@model BlogCore.Models.Articulo
@{
    ViewData["Title"] = "Detalle Articulo";
    DateTime fechaCreacion = DateTime.Parse(Model.FechaCreacion);
    string fechaFormato = fechaCreacion.ToString("dd/MM/yyy");
}
<br>
<div class="container">
    <div class="card">
        <div class="card-header bg-light text-light ">
            <div class="col-12">
                <h2 class="text-primary text-center">@Model.Nombre</h2>
            </div>
            <div class="col-12 text-md-right">
                <p class="text-muted">Fecha: @fechaFormato</p>
            </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.URLImagen" class="img-tumbnail mx-auto d-block" alt="">
                <p class="text-secondary">@Html.Raw(Model.Descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 pb-1">
                    <a asp-action="Index" class="btn btn-success btn-sm">Regresar a Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>